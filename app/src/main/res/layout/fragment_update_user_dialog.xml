<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_add_user_dialog"
    android:padding="16dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_update_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Update user"
        android:textAlignment="center"
        android:textColor="@color/dark_gray"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_avatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@id/edt_update_first_name"
        app:layout_constraintStart_toStartOf="@id/tv_update_user"
        app:layout_constraintTop_toBottomOf="@id/tv_update_user" />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_update_first_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edit_text_border"
        android:hint="First name"
        android:paddingVertical="8dp"
        android:textColor="@color/dark_gray"
        android:textColorHint="@color/gray"
        android:textSize="18sp"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@id/edt_update_last_name"
        app:layout_constraintEnd_toEndOf="@id/tv_update_user"
        app:layout_constraintStart_toEndOf="@id/iv_avatar"
        app:layout_constraintTop_toTopOf="@id/iv_avatar" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_update_last_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edit_text_border"
        android:hint="Last name"
        android:paddingVertical="8dp"
        android:layout_marginTop="22dp"
        android:textColor="@color/dark_gray"
        android:textColorHint="@color/gray"
        android:textSize="18sp"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@id/edt_update_email"
        app:layout_constraintStart_toStartOf="@id/edt_update_first_name"
        app:layout_constraintTop_toBottomOf="@id/edt_update_first_name"
        app:layout_constraintEnd_toEndOf="@id/edt_update_first_name"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_update_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edit_text_border"
        android:hint="Email"
        android:paddingVertical="8dp"
        android:layout_marginTop="22dp"
        android:textColor="@color/dark_gray"
        android:textColorHint="@color/gray"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="@id/edt_update_last_name"
        app:layout_constraintTop_toBottomOf="@id/edt_update_last_name"
        app:layout_constraintEnd_toEndOf="@id/edt_update_last_name" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_secondary_button"
        android:padding="8dp"
        android:text="Cancel"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_update"
        app:layout_constraintStart_toStartOf="@id/iv_avatar"
        app:layout_constraintTop_toBottomOf="@id/edt_update_email" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_update"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_primary_button"
        android:padding="8dp"
        android:text="Update"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/btn_cancel"
        app:layout_constraintEnd_toEndOf="@id/edt_update_email"
        app:layout_constraintStart_toEndOf="@id/btn_cancel"
        app:layout_constraintTop_toTopOf="@id/btn_cancel" />
</androidx.constraintlayout.widget.ConstraintLayout>